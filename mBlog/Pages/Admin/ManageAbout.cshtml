@page "{id:int?}"
@model ManageAboutModel

@section mastHeader{
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('../../img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Home Page Markdown Content</h1>
            <span class="subheading">Enter Home Page Markdown content</span>
          </div>
        </div>
      </div>
    </div>
  </header>
}


  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <!-- Contact Form - Enter your email address on line 19 of the mail/contact_me.php file to make this form work. -->
        <!-- WARNING: Some web hosts do not allow emails to be sent through forms to common mail hosts like Gmail or Yahoo. It's recommended that you use a private domain email address! -->
        <!-- To use the contact form, your site must be on a live web host with PHP! The form will not work locally! -->
        <form name="AboutMeMessage" id="AboutMe" novalidate method="POST">
           <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Title</label>
              <input type="text" class="form-control-aboutMe" placeholder="About Me Title" id="AboutMeTitle" 
              required data-validation-required-message="Please enter a About Me Title."
              asp-for="UserInfo.UserTitle" ></textarea>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Markdown Content</label>
              <textarea rows="25" class="form-control-aboutMe" placeholder="Message" id="AboutMe" required data-validation-required-message="Please enter a MarkDown Content."
              asp-for="UserInfo.UserIntro" ></textarea>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <br>
          <div id="success"></div>
          <button type="submit" class="btn btn-primary" id="sendMessageButton" asp-page-handler="Save" asp-route-id ="@Model.UserInfo.Id" >Save</button>
          <button type="submit" class="btn btn-primary" id="sendMessageButton" asp-page-handler="Delete" asp-route-id = "@Model.UserInfo.Id" >Delete</button>
        </form>
      </div>
    </div>
  </div>