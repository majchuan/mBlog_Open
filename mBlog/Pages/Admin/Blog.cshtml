@page "{id:int?}"
@model BlogModel
@{
    ViewData["Title"] = "Admin Blog Manage page";
}

@section mastHeader{
  <header class="masthead" style="background-image: url('../img/post-bg.jpg')">
      <div class="overlay"></div>
      <div class="container">
      <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
              <h1>Manage Blog</h1>
              <span class="subheading">Click to Manage Each Blog</span>
          </div>
          </div>
      </div>
      </div>
  </header>
}

 <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div id="success"></div>
        <a class="btn btn-primary float-right" asp-page="/Admin/ManageBlog">New Post &rarr;</a>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        @foreach(var blog in Model.BlogList)
        {
          <div class="post-preview">
          <a asp-page="/Admin/ManageBlog" asp-route-id ="@blog.Id">
            <h2 class="post-title">
              @Html.DisplayFor(modelItem => blog.BlogTitle)
            </h2>
            <h3 class="post-subtitle">
              @Html.DisplayFor(modelItem => blog.BlogSubTitle)
            </h3>
          </a>
          <p class="post-meta">Posted by
            <a href="#">@Html.DisplayFor(modelItem => Model.BlogUser.Username) </a>
            @Html.DisplayFor(modelItem => blog.CreateTime) </p>
          </div>
          <hr>
        }
        <!-- Pager -->
        <div class="clearfix">
          <form method="GET">
            <a class="btn btn-primary float-left" asp-page-handler="PrevPage" asp-route-pageNumber = "@Model.PageNumber" >&larr; Prev Posts</a>
            <a class="btn btn-primary float-right" asp-page-handler="NextPage" asp-route-pageNumber = "@Model.PageNumber" >Older Posts &rarr;</a>
          </form>
        </div>
      </div>
    </div>
  </div>